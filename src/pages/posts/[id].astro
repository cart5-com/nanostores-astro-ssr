---
import Layout from "../../layouts/Layout.astro";
import { loadPost, $currentPost } from "../../stores/postsStore";
const { id } = Astro.params;
const post = await loadPost(Number(id));
$currentPost.set(post);
---
<Layout>
    <h1>{post.title}</h1>
    <hr>
    <p>{post.body}</p>
    <hr>
    <p>User ID: {post.userId}</p>
    <hr>
    <p>ID: {post.id}</p>
</Layout>
